@using TaskPlanner2.Models.ViewModel
@model SubTaskViewModel

<div class="modal modal-add" data-target="newSubTask">
    <h1 class="header">
        New SubTask
    </h1>

    <form asp-controller="Tasks" asp-action="AddSubTask" asp-antiforgery="true" class="form-center">
        <input asp-for="UserId" type="hidden" />
        <input asp-for="TaskId" type="hidden" />

        <div class="form-field">
            <label asp-for="Description">Description:</label> <br />
            <input asp-for="Description" class="text-input" size="30" />
            <span asp-validation-for="Description" class="validation" />
        </div> <br />

        <div class="form-field">
            <input type="submit" value="Add SubTask" class="submit-button button" />
        </div>
        <div class="gloabal-validation" asp-validation-summary="ModelOnly"></div>
    </form>
</div>